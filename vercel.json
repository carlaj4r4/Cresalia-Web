{
  "version": 2,
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": ".",
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/index-cresalia.html",
      "permanent": false
    }
  ],
  "rewrites": [
    {
      "source": "/webhook-mercadopago",
      "destination": "/api/webhook-mercadopago.js"
    },
    {
      "source": "/comunidades/(.*)/",
      "destination": "/comunidades/$1/index.html"
    },
    {
      "source": "/comunidades/(.*)",
      "destination": "/comunidades/$1/index.html"
    },
    {
      "source": "/tiendas/(.*)/admin-final.html",
      "destination": "/tiendas/$1/admin-final.html"
    },
    {
      "source": "/tiendas/(.*)/index.html",
      "destination": "/tiendas/$1/index.html"
    },
    {
      "source": "/index-cresalia.html",
      "destination": "/index-cresalia.html"
    }
  ],
  "cleanUrls": false,
  "trailingSlash": false
}
